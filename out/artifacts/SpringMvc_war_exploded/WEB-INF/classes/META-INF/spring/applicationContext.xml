<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- 데이터베이스 연결 -->
    <bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="oracle.jdbc.driver.OracleDriver"/>
        <property name="url" value="jdbc:oracle:thin:@127.0.0.1:1521:hjk"/>
        <property name="username" value="hjk"/>
        <property name="password" value="8883"/>
    </bean>

    <!-- Oracle과 MyBatis 연결 및 SQL 실행해주는 객체 -->
    <bean class="org.mybatis.spring.SqlSessionFactoryBean" id="SqlSessionFactory">
        <property name="dataSource" ref="dataSource"/>
        <!-- MyBatis 설정 파일의 위치 -->
        <property value="classpath:/mybatis-config.xml" name="configLocation"/>
        <!-- Sql 파일 위치 -->
        <property value="classpath:/mapper/TestMapper.xml" name="mapperLocations"/>
    </bean>
</beans>